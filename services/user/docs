GET /profile/:userid
return: {
    UserID   uint
	Username string
	Bio      string
	AvatarID string
}

POST /login
Username string `binding:"required"`
Password string `binding:"required"`
return: userID uint

POST /account
Username string `binding:"required"`
Password string `binding:"required"`
return: userID uint

POST /profile/update	
UserID        uint `binding:"required"`
Bio, AvatarID string
return: {}

POST /password
UserID  int    `binding:"required"`
OldPass string `binding:"required"`
NewPass string `binding:"required"`
return: {}