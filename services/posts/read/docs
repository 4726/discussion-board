GET /post/:postid
return: {
	ID        uint `gorm:"AUTO_INCREMENT;NOT NULL;PRIMARY_KEY"`
	UserID    uint
	Title     string
	Body      string
	Likes     int
	CreatedAt time.Time
	UpdatedAt time.Time
	Comments  []{
		ID        uint `gorm:"AUTO_INCREMENT;NOT NULL;PRIMARY_KEY"`
		PostID    uint
		ParentID  uint `gorm:"DEFAULT:0"`
		UserID    uint
		Body      string
		CreatedAt time.Time
		Likes     int
	}
}

GET /posts
Query:
Total  uint   `form:"total" binding:"required"`
From   uint   `form:"from"`
UserID uint   `form:"userid"`
Sort   string `form:"sort"`
return: []{
	ID        uint `gorm:"AUTO_INCREMENT;NOT NULL;PRIMARY_KEY"`
	UserID    uint
	Title     string
	Body      string empty
	Likes     int
	CreatedAt time.Time
	UpdatedAt time.Time
    Comments []{}
}

POST /posts/multiple
	[]uint
return: []{
    ID        uint
	User      string
	Title     string
	Body      string empty
	Likes     int
	CreatedAt time.Time
	UpdatedAt time.Time
    Comments []{} empty
}
